@using personal_blog.core.Handlers
@using personal_blog.core.Requests.Posts
@using personal_blog.core.Models
@using personal_blog.core.Requests.Categories
@inject ICategoryHandler Handler

<MudDialog Style="min-width: 800px; min-height: 500px ">
    <TitleContent>
        <MudText Typo="Typo.h6">@(IsUpdateMode ? "Update Post" : "Create Post")</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="UpdateModel.Title" Label="Title" 
                      Variant="Variant.Outlined" Class="mb-3"/>
        <MudTextField @bind-Value="UpdateModel.Body" Label="Body" 
                      Variant="Variant.Outlined" Lines="10"
                      Class="mb-3"/>
        <MudSelect T="int" @bind-Value="Model.CategoryId" Label="Category" Variant="Variant.Outlined">
            @foreach (var category in _categories)
            { 
                <MudSelectItem Value="@category.Id">@category.Title</MudSelectItem>
            }
        </MudSelect>
        @{ 
            Model.Title = UpdateModel.Title;
            Model.Body = UpdateModel.Body;
            Model.CategoryId = UpdateModel.CategoryId;
        }

    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        @if (IsUpdateMode)
        {
            <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Update">Update</MudButton>
        }
        else
        {
            <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Create">Create</MudButton>
        }
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance DialogInstance { get; set; } = null!;
    
    [Parameter]
    public UpdatePostRequest? InitialUpdateModel { get; set; }
    
    private CreatePostRequest Model { get; set; } = new();
    private UpdatePostRequest UpdateModel { get; set; } = new();
    private List<Category> _categories = new(); 
    
    private bool IsUpdateMode => InitialUpdateModel != null && InitialUpdateModel.Id != 0;
    
    protected override async Task OnInitializedAsync()
    {
        var request = new GetAllCategoriesRequest()
        {
            PageSize = 9999,
            PageNumber = 1
        };
        var result = await Handler.GetAllAsync(request); 
        if (result.IsSuccess && result.Data is not null)
        {
            _categories = result.Data;
        }
        
        if (IsUpdateMode && InitialUpdateModel != null)
        {
            UpdateModel = InitialUpdateModel;
        }
    }

    private void Cancel()
    {
        DialogInstance.Cancel();
    }

    private void Create()
    {
        DialogInstance.Close(DialogResult.Ok(Model));
    }
    
    private void Update()
    {
        DialogInstance.Close(DialogResult.Ok(UpdateModel));
    }

}