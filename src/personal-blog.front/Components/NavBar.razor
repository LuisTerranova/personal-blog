<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" OnClick="@ToggleDrawer"></MudIconButton>
        <MudImage Src="Images/trash-tech-logo.png" Alt="Logo" Width="95" />
        <MudText Typo="Typo.h5" Color="Color.Primary">Trash Tech Blog</MudText>
        <MudSpacer/>
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Href="https://github.com/LuisTerranova/" 
                       Target="_blank" Class="ma-3"/>
        <MudIconButton Icon="@Icons.Custom.Brands.LinkedIn" Href="https://www.linkedin.com/in/luis-magno-brito-6270941b8/"
                       Target="_blank" Class="ma-3"/>
    </MudAppBar>
    <MudDrawer @bind-Open="_open" Color="Color.Primary" 
               Breakpoint="Breakpoint.Xl"
               Elevation="1"
               Variant="@DrawerVariant.Temporary">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">
                Trash Tech Blog
            </MudText>
        </MudDrawerHeader>
        <MudNavLink Href="/" Match="NavLinkMatch.All">
            Home
        </MudNavLink>
        <MudNavLink Href="/posts" Match="NavLinkMatch.All">
            Posts
        </MudNavLink>
        <MudNavLink Href="/projects" Match="NavLinkMatch.All">
            Projects
        </MudNavLink>
        <MudNavLink Href="/about" Match="NavLinkMatch.All">
            About
        </MudNavLink>
    </MudDrawer>
</MudLayout>

@code
{
    private bool _open;

    private void ToggleDrawer()
    {
        _open = !_open;
    }
}